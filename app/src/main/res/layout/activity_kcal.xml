<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kcal"
    android:orientation="vertical"
    android:background="@drawable/bmibackground">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="나의 하루 권장 칼로리는??"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="30sp"
        ></TextView>



    <EditText
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:hint="키를 입력하세열"
        android:textSize="30sp"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:paddingLeft="50sp"
        android:id="@+id/wheel2"
        ></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="나의 하루 활동량은?"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="30sp"
        ></TextView>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdogrp"
        android:layout_marginTop="40sp"
        >

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="앉아서 주로 생활하거나 활동량이 적음"
            android:id="@+id/btn1"
            ></RadioButton>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="규칙적인 생활등으로 보통의 활동량"
            android:layout_marginTop="20sp"
            android:id="@+id/btn2"
            ></RadioButton>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="육체노동 등 평소 신체활동이 많은경우"
            android:layout_marginTop="20sp"
            android:id="@+id/btn3"
            ></RadioButton>

    </RadioGroup>

    <androidx.cardview.widget.CardView
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="450dp"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:backgroundTint="#7B96E6"
        android:id="@+id/calbtn"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계산!"
            android:textSize="30sp"
            android:gravity="center"
            ></TextView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/kcalresult"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="60sp"
        ></TextView>




</LinearLayout>